END_OF_TMP
  arg0q = args[0].double_quote
  args = args.join(', ')

  # generate a wrapper call.
  str = strtmp.gsub(/\n/, '')
  str = str.gsub(/%args%/, "#{arg0q}, #{args}")
  str
