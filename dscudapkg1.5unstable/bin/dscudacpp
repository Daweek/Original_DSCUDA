def substituter_cudaBindTexture(args, ptxfile)
  strtmp = <<-"END_OF_TMP"
    dscudaBindTextureWrapper(dscudaLoadModule(\"#{ptxfile}\", Ptxdata), %args%)
END_OF_TMP
  arg1q = args[1].double_quote
  args = args.join(', ')

  # generate a wrapper call.
  str = strtmp.gsub(/\n/, '')
  str = str.gsub(/%args%/, "#{arg1q}, #{args}")
  str
end

